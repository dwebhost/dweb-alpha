generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // postgresql
  url      = env("DATABASE_URL")
}

model Project {
  id          String       @id @unique
  githubUrl   String       @unique
  address     String
  outputDir   String
  deployments Deployment[]
  createdAt   DateTime
  updatedAt   DateTime

  @@index([githubUrl, address])
}

model Deployment {
  id          Int          @id @default(autoincrement())
  status      String
  commitHash  String?
  ensName     String?
  ipfsCid     String?
  deployedAt  DateTime?
  createdAt   DateTime
  updatedAt   DateTime
  error       String?
  project     Project?     @relation(fields: [projectId], references: [id])
  projectId   String?
  environment Environment?

  @@index([id, ensName])
}

model Environment {
  id           Int        @id @default(autoincrement())
  jsonText     String
  createdAt    DateTime
  updatedAt    DateTime
  deployment   Deployment @relation(fields: [deploymentId], references: [id])
  deploymentId Int        @unique

  @@index([id])
}
