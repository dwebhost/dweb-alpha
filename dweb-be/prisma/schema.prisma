generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // postgresql
  url      = env("DATABASE_URL")
}

model Project {
  id           String       @id @unique
  githubUrl    String
  githubBranch String
  address      String
  ensName      String?
  deployments  Deployment[]
  environment  Environment?
  buildConfig  BuildConfig?
  createdAt    DateTime
  updatedAt    DateTime

  @@unique([githubUrl, githubBranch])
  @@index([githubUrl, address])
}

model Deployment {
  id          Int       @id @default(autoincrement())
  status      String
  commitHash  String?
  commitTitle String?
  ipfsCid     String?
  error       String?
  deployedAt  DateTime?
  createdAt   DateTime
  updatedAt   DateTime
  project     Project?  @relation(fields: [projectId], references: [id])
  projectId   String?

  @@index([id])
}

model Environment {
  id        Int      @id @default(autoincrement())
  jsonText  String
  createdAt DateTime
  updatedAt DateTime
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String   @unique

  @@index([id])
}

model BuildConfig {
  id        Int      @id @default(autoincrement())
  jsonText  String
  outputDir String
  createdAt DateTime
  updatedAt DateTime
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String   @unique

  @@index([id])
}

model SyncInfo {
  chain     String   @id @unique
  blockNum  BigInt
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([chain])
}

model ContentHash {
  id        Int      @id @default(autoincrement())
  txHash    String   @unique
  node      String
  hash      String
  blockNum  BigInt
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@index([id, node, status])
}
