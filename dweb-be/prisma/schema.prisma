generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // postgresql
  url      = env("DATABASE_URL")
}

model Project {
  id           String       @id @unique
  githubUrl    String       @unique
  githubBranch String
  address      String
  ensName      String?
  deployments  Deployment[]
  environment  Environment?
  buildConfig  BuildConfig?
  createdAt    DateTime
  updatedAt    DateTime

  @@index([githubUrl, address])
}

model Deployment {
  id         Int       @id @default(autoincrement())
  status     String
  commitHash String?
  ipfsCid    String?
  error      String?
  deployedAt DateTime?
  createdAt  DateTime
  updatedAt  DateTime
  project    Project?  @relation(fields: [projectId], references: [id])
  projectId  String?

  @@index([id])
}

model Environment {
  id        Int      @id @default(autoincrement())
  jsonText  String
  createdAt DateTime
  updatedAt DateTime
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String   @unique

  @@index([id])
}

model BuildConfig {
  id        Int      @id @default(autoincrement())
  jsonText  String
  outputDir String
  createdAt DateTime
  updatedAt DateTime
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String   @unique

  @@index([id])
}
